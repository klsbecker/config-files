# User functions
root() {
	default_address="192.168.20.100"
	case $# in
		0) ip="${default_address}" ;;
		1) ip="${default_address%.*}.$1" ;;
		2) ip="${default_address%.*.*}.$1.$2" ;;
	esac
	echo "Connecting to SSH: root@${ip}"
	ssh root@${ip} 
	echo
}

